<body>

  <% if current_user %>
    Signed in as <%= current_user.username %> | <%= link_to "Logout", '/logout' %>
  <% else %>
    <%= button_to 'Login', '/login', :method => :get %>
    <%= button_to 'Signup', '/signup', :method => :get %>
  <% end %>

  <br>
    <% if current_user.admin %>
      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>email</th>
            <th>Banned</th>
            <th>Admin</th>
            <th>Show</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td><%= user.email %></td>
            <td><%= user.banned %></td>
            <td><%= user.admin %></td>
            <td><%= link_to 'Show', user %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
</body>
