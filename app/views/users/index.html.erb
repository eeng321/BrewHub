<body>

  <% if current_user %>
    Signed in as <%= current_user.username %> | <%= link_to "Logout", '/logout' %>
  <% else %>
    <%= button_to 'Login', '/login', :method => :get %>
    <%= button_to 'Signup', '/signup', :method => :get %>
  <% end %>
  <% if current_user %>
    <br>
      <% if current_user.admin %>
        <table>
          <thead>
            <tr>
              <th>Username</th>
              <th>FirstName</th>
              <th>LastName</th>
              <th>email</th>
              <th>Ban Status</th>
              <th>Admin</th>
              <th>Show</th>
              <th>Change Ban status</th>
              <th>Change Admin status</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.firstname %></td>
                <td><%= user.lastname %></td>
                <td><%= user.email %></td>
                <td><%= user.banned %></td>
                <td><%= user.admin %></td>
                <td><%= link_to 'Show', user %></td>
                <td><%= link_to("Bannnn", user_ban_path(user), :confirm => "Are you sure?", :method => :post)%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>

    Edit your user profile:
    <%= form_for :users, url: users_path(@user), method: :patch do |f| %>

    <% end %>
  <% end %>
</body>
