<%= form_for @user, url: user_path do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <% pluralize(@user.errors.count, "error") %>
        prohibited this user from being created:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg|%>
          <li><%= msg %></li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>