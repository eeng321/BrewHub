iframe.breweries_info
{
  background-color: white;
  margin-left:240px;
  height: 100vh;
  width: calc(100% - 240px);
}

iframe.breweries_info2
{
  background-color: white;
  margin-left:0;
  height: 100vh;
  width: 100%;
}

