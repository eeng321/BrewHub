  <script>
  $(document).ready(function() {
    $(".button-collapse").sideNav();
    // SHOWS DIV
    $("a[id^=open_]").click(function () {
      var id = this.id.split("_")[1];
      console.log(id);
      $("#" + id).removeClass("movedown").addClass("moveup");
    });

    // HIDES DIV
    $("a[id^=close_]").click(function () {
      var id = this.id.split("_")[1];
      $("#" + id).removeClass("moveup").addClass("movedown");
    });
  });
  </script>

