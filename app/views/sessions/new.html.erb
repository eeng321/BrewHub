<h1>Login</h1>

<%= form_tag '/login' do %>

  Email: <%= text_field_tag :email %>
  Password: <%= password_field_tag :password %>
  <%= submit_tag "Submit" %>

<% end %>

</br>
</br>
<div>
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
</div>
<%= yield %>
<br>
<a href="/signup">Don't have an account? Sign up here</a>
