<body>

  <% if current_user %>
    Signed in as <%= current_user.username %> | <%= link_to "Logout", '/logout' %>
  <% else %>
    <%= button_to 'Login', '/login', :method => :get %>
    <%= button_to 'Signup', '/signup', :method => :get %>
  <% end %>
  <% if current_user %>
    <br>
      <% if current_user.admin %>
        <table>
          <thead>
            <tr>
              <th>Username</th>
              <th>FirstName</th>
              <th>LastName</th>
              <th>email</th>
              <th>Ban Status</th>
              <th>Admin</th>
              <th>Show</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.firstname %></td>
                <td><%= user.lastname %></td>
                <td><%= user.email %></td>
                <td><%= user.banned %>:<%= link_to("Change", user_ban_path(user), :confirm => "Are you sure?", :method => :post)%></td>
                <td><%= user.admin %>:<%= link_to("Change", user_admin_path(user), :confirm => "Are you sure?", :method => :post)%></td>
                <td><%= link_to 'Show', user %></td>

              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/view?zoom=11&center=49.2827%2C-123.1207&key=AIzaSyA9IyblCP90L7gWnNZ_0nh8aS6wacOru4c" allowfullscreen></iframe>
      <% end %>
<p>
    Edit your user profile:
<!-- TODO-->
</p>
  <% end %>
</body>
